specVersion: 0.0.3
description: >-
  genTk subgraph
schema:
  file: ./schema.graphql
dataSources:
  - kind: ethereum/contract
    name: RoyaltyToken
    network: {{network}}
    source:
      address: '{{token.address}}'
      abi: RoyaltyToken
      startBlock: {{token.startBlock}}
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.6
      language: wasm/assemblyscript
      file: ./src/genTk-erc721.ts
      entities:
        - TransferEvent
      abis:
        - name: RoyaltyToken
          file: ./abi/genTk.json
      eventHandlers:
        - event: Transfer(indexed address,indexed address,indexed uint256)
          handler: handleTransfer
